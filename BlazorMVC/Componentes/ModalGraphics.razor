
<div class="simple-form">
    <fieldset>
        <label for="graphicSelectTypeList">Graphic Type</label>
        <select @bind="SelectToGraphic" class="form-control">
            <option>Select a graphic to Draw...</option>
            <option value="@GraphicType.Pie">Pie Chart</option>
            <option value="@GraphicType.Column">Column Chart</option>
            <option value="@GraphicType.Table">Table</option>
        </select>
    </fieldset>
    <hr />
    <button @onclick="Cancel" type="button" class="btn btn-secondary">Close</button>
    <button @onclick="Save" type="button" class="btn btn-primary">Run</button>
</div>
 
@code {
    [CascadingParameter]
    public BlazoredModalInstance ModalInstance { get; set; }
    [CascadingParameter]
    public ModalParameters Parameters { get; set; }
    public GraphicType SelectToGraphic { get; set; }


    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    public void Cancel()
    {
        ModalInstance.Cancel();
    }

    public void Save()
    {
        ModalInstance.Close(ModalResult.Ok<GraphicType>(SelectToGraphic));
    }
}
