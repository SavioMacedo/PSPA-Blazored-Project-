@inject IModalService ModalService

<div class="simple-form">
    <fieldset>
        <label for="graphicSelectTypeList">Graphic Type</label>
        <select @bind="SelectToGraphic" class="form-control">
            <option>Select a graphic to Draw...</option>
            <option value="pie">Pie Chart</option>
            <option value="bar">Bar Chart</option>
            <option value="column">Column Chart</option>
            <option value="histogram">Histogram</option>
            <option value="table">Table</option>
        </select>
    </fieldset>
    <hr />
    <button @onclick="Cancel" type="button" class="btn btn-secondary">Close</button>
    <button @onclick="Save" type="button" class="btn btn-primary">Run</button>
</div>
 
@code {
    [CascadingParameter]
    public ModalParameters Parameters { get; set; }
    public string SelectToGraphic { get; set; }


    protected override void OnInitialized()
    {
        base.OnInitialized();
    }

    public void Cancel()
    {
        ModalService.Cancel();
    }

    public void Save()
    {
        ModalService.Close(ModalResult.Ok<string>(SelectToGraphic));
    }
}
