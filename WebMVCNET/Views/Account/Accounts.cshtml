@model IEnumerable<Usuario>


@{
    ViewData["Title"] = "Managing system roles.";
}

<h1>System Accounts</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                System Accounts
            </div>
            <div class="card-body">
                <table class="table">
                    <caption>List of accounts</caption>
                    <thead>
                        <tr>
                            <th scope="col">UserName</th>
                            <th scope="col">Email</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model) {
                            <tr>
                                <td>@role.UserName</td>
                                <td>@role.Email</td>
                                <td><div class="float-right"><a asp-controller="Account" asp-action="ViewUser" asp-route-idUser="@role.Id" class="btn btn-sm btn-outline-warning">View/Edit</a></div></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
